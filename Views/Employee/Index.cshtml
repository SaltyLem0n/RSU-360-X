@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    Layout = null;

    // Logic to retrieve the current language and list of supported languages
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture.RequestCulture.UICulture;
    var cultureItems = LocOptions.Value.SupportedUICultures.ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
}

<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - @Localizer["DashboardTitle"]</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554", // Deep Blue
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                    },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                    }
                },
            },
        };
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-white font-sans transition-colors duration-500 overflow-x-hidden min-h-screen flex flex-col">
    <nav class="fixed top-0 left-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10 shadow-sm transition-colors duration-500">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-4">
                <div class="flex items-center">
                    <img alt="RSU Logo" class="h-10 w-auto object-contain brightness-0 dark:brightness-100 dark:invert-0 invert" src="/assets/img/rsu_logo.png" />
                </div>
            </div>
            <div class="flex items-center gap-4 md:gap-6">

                <form id="selectLanguage" asp-controller="Culture" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" class="mr-4">
                    <div class="relative group">

                        <button type="button" class="flex items-center gap-2 px-3 py-2 rounded-xl bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-white/10 hover:text-primary dark:hover:text-primary transition-all duration-300 outline-none focus:ring-2 focus:ring-primary/50">
                            <span class="material-symbols-outlined text-[20px]">language</span>
                            <span class="text-sm font-semibold uppercase tracking-wide">
                                @currentCulture.TwoLetterISOLanguageName
                            </span>
                            <span class="material-symbols-outlined text-[18px] text-slate-400 transition-transform duration-300 group-hover:-rotate-180">
                                expand_more
                            </span>
                        </button>

                        <div class="absolute right-0 top-full mt-2 w-48 p-1.5 bg-white dark:bg-[#1e293b] border border-slate-100 dark:border-white/10 rounded-2xl shadow-xl shadow-slate-200/50 dark:shadow-black/50 opacity-0 invisible translate-y-2 group-hover:translate-y-0 group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 transform origin-top-right">

                            <div class="px-3 py-2 text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">
                                Select Language
                            </div>

                            @foreach (var culture in cultureItems)
                            {
                                var isActive = culture.Name == currentCulture.Name;
                                <button type="submit" name="culture" value="@culture.Name"
                                        class="w-full flex items-center justify-between px-3 py-2.5 rounded-xl text-sm font-medium transition-all duration-200
                                        @(isActive
                                                                                ? "bg-primary/10 text-primary"
                                                                                : "text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-primary")">

                                    <div class="flex items-center gap-3">
                                        <span>@culture.NativeName</span>
                                    </div>

                                    @if (isActive)
                                    {
                                        <span class="material-symbols-outlined text-[18px]">check_circle</span>
                                    }
                                </button>
                            }
                        </div>
                    </div>
                </form>
                <div class="hidden md:flex flex-col items-end">
                    <span class="text-sm font-display font-medium text-slate-900 dark:text-white">@Localizer["Welcome"], @Context.Session.GetString("DisplayName")</span>
                    <span class="text-xs text-slate-500 dark:text-slate-400">@Context.Session.GetString("Role")</span>
                </div>
                <div class="h-8 w-8 rounded-full bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-md">
                    @(Context.Session.GetString("DisplayName")?.Substring(0, 2).ToUpper() ?? "US")
                </div>
                <a href="@Url.Action("Logout", "Login")" class="group relative ml-2 flex items-center gap-2 overflow-hidden rounded-xl bg-red-50 px-4 py-2 text-sm font-medium text-red-600 transition-all duration-300 hover:-translate-y-0.5 hover:bg-red-500 hover:text-white hover:shadow-lg hover:shadow-red-500/30 active:scale-95 dark:bg-red-500/10 dark:text-red-400 dark:hover:bg-red-500 dark:hover:text-white">
                    <span>@Localizer["Logout"]</span>
                    <span class="material-symbols-outlined text-[18px] transition-transform duration-300 group-hover:translate-x-1">logout</span>
                </a>
            </div>
        </div>
    </nav>
    <main class="flex-grow pt-28 pb-12 px-6 lg:px-12 w-full">
        <div class="max-w-7xl mx-auto">
            <div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-display font-bold text-slate-900 dark:text-white mb-2">
                        @Localizer["DashboardTitle"]
                    </h1>
                    <p class="text-slate-500 dark:text-slate-400">@Localizer["DashboardSubtitle"]</p>
                </div>
                <div class="text-sm text-slate-400 font-mono">
                    @Localizer["AcademicYear"] @DateTime.Now.Year / @Localizer["Semester"] 1
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @{
                    var dept = Context.Session.GetString("Department");
                    var isHr = !string.IsNullOrEmpty(dept) && (dept == "Human Resources" || dept == "HR" || dept == "สำนักบุคคล");
                }
                @if (isHr)
                {
                    <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                        <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                            <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                                <span class="material-symbols-outlined text-9xl text-white">admin_panel_settings</span>
                            </div>
                            <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                                <span class="material-symbols-outlined text-3xl text-secondary">admin_panel_settings</span>
                            </div>
                            <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["EvalReviewTitle"]</h3>
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                                @Localizer["EvalReviewDesc"]
                            </p>
                            <button disabled class="w-full py-2.5 px-4 rounded-lg bg-gray-400 text-white font-medium text-sm cursor-not-allowed flex items-center justify-center gap-2">
                                @Localizer["ComingSoon"]
                            </button>
                        </div>
                    </div>
                }
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">trending_up</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">trending_up</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["PerformanceEvalTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["PerformanceEvalDesc"]
                        </p>
                        <a href="@Url.Action("Index", "Section1Personal")" class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">palette</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">palette</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["ArtsCultureTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["ArtsCultureDesc"]
                        </p>
                        <button class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">task_alt</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">task_alt</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["AssignedTasksTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["AssignedTasksDesc"]
                        </p>
                        <button class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">folder_shared</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">folder_shared</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["AdminWorkTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["AdminWorkDesc"]
                        </p>
                        <button class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">support_agent</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">support_agent</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["SupportTasksTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                           @Localizer["SupportTasksDesc"]
                        </p>
                        <button class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">menu_book</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">menu_book</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["AcademicResourcesTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["AcademicResourcesDesc"]
                        </p>
                        <a href="@Url.Action("Index", "Academic")" class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">badge</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">badge</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">@Localizer["VisaReviewTitle"]</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            @Localizer["VisaReviewDesc"]
                        </p>
                        <a href="/staff/visa/review" class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            @Localizer["Go"] <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="py-8 px-6 text-center border-t border-slate-200 dark:border-white/10 bg-white dark:bg-background-dark mt-auto">
        <div class="flex flex-col items-center justify-center gap-2">
            <p class="text-slate-500 dark:text-slate-400 text-sm">
                @Localizer["FooterCopyright"]
            </p>
        </div>
    </footer>
</body>
</html>