@model RSU_360_X.Models.VisaSubmission
@{ Layout = null; }

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>RSUX - Visa Application Detail</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Prompt:wght@300;400;500;600&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,FILL@0..1&display=swap" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8", secondary: "#ec4899",
                        "background-dark": "#0f172a", "surface-dark": "#1e293b",
                        "status-green": "#10b981", "status-red": "#ef4444", "status-yellow": "#f59e0b", "status-purple": "#8b5cf6",
                    },
                    backgroundImage: { 'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)' }
                }
            }
        };
    </script>
</head>
<body class="bg-slate-100 dark:bg-background-dark text-slate-800 dark:text-white font-sans min-h-screen">

<nav class="fixed top-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10">
    <div class="flex items-center justify-between max-w-7xl mx-auto">
        <div class="flex items-center gap-4">
            <span class="text-xl font-bold text-primary">RSUX Visa Admin</span>
        </div>
        <div class="flex items-center gap-4">
             <a href="/staff/visa/review" class="text-sm font-medium text-slate-500 hover:text-primary transition-colors">Back to Dashboard</a>
        </div>
    </div>
</nav>

<main class="pt-28 pb-12 px-6 max-w-7xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold">Visa Application â€“ <span class="text-primary">@Model.StudentId</span> (@Model.StudentName)</h1>
    </div>

    <div class="space-y-6">
        <div class="bg-white dark:bg-surface-dark rounded-2xl border border-white/10 shadow-xl p-6 grid grid-cols-2 md:grid-cols-4 gap-8">
            <div>
                <p class="text-[10px] text-slate-500 uppercase font-bold mb-1">Status</p>
                <span class="px-3 py-1 rounded-full text-[11px] font-bold uppercase
                @(Model.Status == "approved" ? "bg-status-green/10 text-status-green border border-status-green/20" : 
                  Model.Status == "rejected" ? "bg-status-red/10 text-status-red border border-status-red/20" : 
                  "bg-status-yellow/10 text-status-yellow border border-status-yellow/20")">
                    @Model.Status
                </span>
            </div>
            <div>
                <p class="text-[10px] text-slate-500 uppercase font-bold mb-1">Country</p>
                <p class="text-sm font-medium">@Model.Country</p>
            </div>
            <div>
                <p class="text-[10px] text-slate-500 uppercase font-bold mb-1">Visa Type</p>
                <p class="text-sm font-medium">@Model.VisaType</p>
            </div>
            <div>
                <p class="text-[10px] text-slate-500 uppercase font-bold mb-1">Submitted On</p>
                <p class="text-sm font-medium">@Model.SubmittedAt.ToString("dd MMM yyyy")</p>
            </div>
        </div>

        <div class="bg-white dark:bg-surface-dark rounded-2xl border border-white/10 shadow-xl p-6">
            <h3 class="font-bold mb-4 flex items-center gap-2"><span class="material-symbols-outlined text-primary">description</span> Submitted Documents</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach(var file in Model.Files) {
                    <div class="group bg-slate-50 dark:bg-white/5 border border-white/10 rounded-xl p-4 transition-all hover:border-primary/50">
                        <div class="aspect-square bg-slate-900/50 rounded flex items-center justify-center mb-3">
                            <span class="material-symbols-outlined text-4xl text-slate-600">@(file.Name.EndsWith(".pdf") ? "picture_as_pdf" : "image")</span>
                        </div>
                        <p class="text-xs font-medium truncate mb-3">@file.Name</p>
                        <div class="grid grid-cols-2 gap-2">
                            <a href="@file.Url" target="_blank" class="py-1.5 bg-btn-gradient text-white rounded text-[10px] font-bold text-center">VIEW</a>
                            <a href="@file.Url" download class="py-1.5 bg-white/10 text-white rounded text-[10px] font-bold text-center">DOWNLOAD</a>
                        </div>
                    </div>
                }
                @if(!Model.Files.Any())
                {
                    <p class="text-sm text-slate-500 col-span-full">No documents submitted.</p>
                }
            </div>
        </div>

         @if(!string.IsNullOrEmpty(Model.StaffNotes))
        {
            <div class="bg-white dark:bg-surface-dark rounded-2xl border border-white/10 shadow-xl p-6">
                <h3 class="font-bold mb-2 flex items-center gap-2 text-status-red"><span class="material-symbols-outlined">warning</span> Staff Notes (Rejection Reason)</h3>
                <p class="text-sm text-slate-300">@Model.StaffNotes</p>
            </div>
        }

        <div class="bg-white dark:bg-surface-dark rounded-2xl border border-white/10 shadow-xl p-8">
            <div class="flex flex-col md:flex-row items-center justify-center gap-4">
                @if (Model.Status != "pickup")
                {
                    <a href="/staff/visa/approve/@Model.StudentId" class="px-8 py-3 bg-btn-gradient text-white rounded-xl text-sm font-bold uppercase tracking-widest shadow-lg shadow-primary/20 hover:brightness-110 active:scale-[0.98] transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">check_circle</span> Approve Application
                    </a>
                    <a href="/staff/visa/reject/@Model.StudentId" class="px-8 py-3 bg-status-red text-white rounded-xl text-sm font-bold uppercase tracking-widest shadow-lg shadow-status-red/20 hover:brightness-110 active:scale-95 transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">cancel</span> Reject Application
                    </a>
                    <a href="/staff/visa/pickup/@Model.StudentId" class="px-8 py-3 border-2 border-white/20 text-white rounded-xl text-sm font-bold uppercase tracking-widest flex items-center gap-2 hover:bg-white/5 transition-all text-center">
                        <span class="material-symbols-outlined">edit_calendar</span> Mark Pickup
                    </a>
                }

                <div class="flex flex-col items-center gap-2">
                    @if (Model.Status == "pickup")
                    {
                        <a href="/staff/visa/complete/@Model.StudentId" 
                           class="px-8 py-3 bg-status-purple text-white rounded-xl text-sm font-bold uppercase tracking-widest shadow-lg shadow-status-purple/20 hover:brightness-110 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">task_alt</span> COMPLETE APPLICATION
                        </a>
                    }
                    else
                    {
                        <div class="relative group">
                            <button disabled 
                                    class="px-8 py-3 bg-slate-700/40 text-slate-500 border border-white/5 rounded-xl text-sm font-bold uppercase tracking-widest cursor-not-allowed flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined">task_alt</span> COMPLETE APPLICATION
                            </button>
                            <div class="mt-2 text-center">
                                <span class="text-[10px] text-status-red font-bold flex items-center justify-center gap-1">
                                    <span class="material-symbols-outlined text-[12px]">info</span>
                                    Status must be "PICKUP" first
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

</body>
</html>


