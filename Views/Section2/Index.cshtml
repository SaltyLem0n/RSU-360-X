@model RSU_360_X.Models.ViewModels.Section2Vm
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - Personal Information</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
          rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                },
            },
        };
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-white font-sans">
    <nav class="fixed top-0 left-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10 shadow-sm">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="/Employee" class="flex items-center gap-2 text-slate-500 hover:text-primary transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span>Back to Dashboard</span>
                </a>
            </div>
            <div class="font-display font-semibold text-lg">Section 1: Personal Information</div>
            <div class="w-24"></div> <!-- Spacer -->
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6 lg:px-12 max-w-5xl mx-auto">

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center gap-2">
                <span class="material-symbols-outlined">check_circle</span>
                @TempData["Success"]
            </div>
        }

        <div class="bg-white dark:bg-surface-dark rounded-2xl shadow-sm border border-slate-200 dark:border-white/10 overflow-hidden">
            <div class="p-6 md:p-8">
                <h2 class="text-xl font-display font-semibold mb-6 pb-4 border-b border-slate-200 dark:border-white/10">
                    Personal Profile
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <!-- Read Only Fields -->
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">
                            Full
                            Name
                        </label>
                        <div class="text-lg font-medium">@Model.EmpFname @Model.EmpLname</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">
                            Employee
                            ID
                        </label>
                        <div class="text-lg font-medium font-mono">@Model.EmpId</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Department</label>
                        <div class="text-base text-slate-700 dark:text-slate-300">@Model.EmpDepartment</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Faculty</label>
                        <div class="text-base text-slate-700 dark:text-slate-300">@Model.EmpFaculty</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">
                            Academic
                            Rank
                        </label>
                        <div class="text-base text-slate-700 dark:text-slate-300">@Model.EmpAcademicPos</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">
                            Highest
                            Degree
                        </label>
                        <div class="text-base text-slate-700 dark:text-slate-300">@Model.EmpHEducation</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Age</label>
                        <div class="text-base text-slate-700 dark:text-slate-300">@Model.EmpAge Years</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">
                            Start
                            Date
                        </label>
                        <div class="text-base text-slate-700 dark:text-slate-300">
                            @Model.EmpStartDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </div>

                <h2 class="text-xl font-display font-semibold mb-6 pb-4 border-b border-slate-200 dark:border-white/10 mt-10">
                    Work Focus Configuration
                </h2>

                <form method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <!-- Hidden fields to preserve VM state if needed, but mostly read-only on display -->

                    <div class="space-y-4">
                        <label class="flex items-start gap-3 p-4 rounded-xl border border-slate-200 dark:border-white/10 hover:bg-slate-50 dark:hover:bg-white/5 cursor-pointer transition-colors">
                            <input type="checkbox" asp-for="IsTeachingFocused"
                                   class="mt-1 rounded border-slate-300 text-primary focus:ring-primary w-5 h-5" />
                            <div>
                                <span class="block font-medium">Teaching Focused</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400">
                                    Primary responsibility is
                                    instruction and student mentorship.
                                </span>
                            </div>
                        </label>

                        <label class="flex items-start gap-3 p-4 rounded-xl border border-slate-200 dark:border-white/10 hover:bg-slate-50 dark:hover:bg-white/5 cursor-pointer transition-colors">
                            <input type="checkbox" asp-for="IsAdministrationFocused"
                                   class="mt-1 rounded border-slate-300 text-primary focus:ring-primary w-5 h-5" />
                            <div>
                                <span class="block font-medium">Administration Focused</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400">
                                    Primary responsibility is
                                    departmental or university management.
                                </span>
                            </div>
                        </label>

                        <div class="border border-slate-200 dark:border-white/10 rounded-xl p-4 space-y-4 bg-slate-50/50 dark:bg-white/5">
                            <label class="flex items-start gap-3 cursor-pointer">
                                <input type="checkbox" asp-for="IsResearchFocused"
                                       class="mt-1 rounded border-slate-300 text-primary focus:ring-primary w-5 h-5" />
                                <div>
                                    <span class="block font-medium">Research Focused</span>
                                    <span class="text-sm text-slate-500 dark:text-slate-400">
                                        Primary responsibility is
                                        academic research and publication.
                                    </span>
                                </div>
                            </label>

                            <!-- Conditional Input visible via logic or always visible but relevant only if Checked -->
                            <div class="ml-8">
                                <label class="block text-sm font-medium mb-1">
                                    Approved Academic Year for Research
                                    Track
                                </label>
                                <input asp-for="ResearchApprovedYearAcademic"
                                       class="block w-full rounded-lg border-slate-200 dark:border-white/10 bg-white dark:bg-black/20 text-sm py-2 px-3 focus:ring-2 focus:ring-primary focus:border-transparent"
                                       placeholder="e.g. 2567" />
                                <span class="text-xs text-slate-400 mt-1">
                                    Leave empty if not applicable or not yet
                                    approved.
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="pt-6 flex justify-end">
                        <button type="submit"
                                class="bg-gradient-to-r from-cyan-400 to-blue-600 hover:from-cyan-500 hover:to-blue-700 text-white font-semibold py-2.5 px-6 rounded-xl shadow-lg shadow-blue-500/30 hover:shadow-blue-600/40 active:scale-[0.98] transition-all">
                            Save Changes
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </main>
</body>

</html>
