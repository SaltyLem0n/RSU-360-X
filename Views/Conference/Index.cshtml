@{
    Layout = null;
    ViewData["Title"] = "Conference / Academic Article";
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - Conference</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Prompt:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: { DEFAULT: "0.75rem" },
                    backgroundImage: { 'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)' }
                },
            },
        };
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-white font-sans transition-colors duration-500 overflow-x-hidden min-h-screen flex flex-col">

    <nav class="fixed top-0 left-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10 shadow-sm">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="/Academic" class="flex items-center gap-2 text-slate-500 hover:text-primary transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span>Back to Academic Resources</span>
                </a>
            </div>
            <div class="font-display font-semibold text-lg">Conference / Academic Article</div>
            <div class="w-24"></div>
        </div>
    </nav>

    <main class="flex-grow pt-28 pb-12 px-6 lg:px-12 w-full">
        <div class="max-w-7xl mx-auto space-y-8">

            <!-- Stored -->
            <section class="overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm">
                <header class="p-5 bg-card-header flex items-center gap-3">
                    <span class="material-symbols-outlined text-2xl text-secondary">inventory_2</span>
                    <div>
                        <h2 class="text-lg font-semibold text-white tracking-wide">Stored Submissions</h2>
                        <p class="text-white/70 text-sm">Your saved conference records</p>
                    </div>
                </header>

                <div class="p-6 overflow-x-auto">
                    <table class="min-w-full text-sm">
                        <thead class="text-left">
                            <tr class="border-b border-slate-200 dark:border-white/10">
                                <th class="py-3 pr-4 font-semibold">Meeting</th>
                                <th class="py-3 pr-4 font-semibold">Article Title</th>
                                <th class="py-3 pr-4 font-semibold">Authors</th>
                                <th class="py-3 pr-4 font-semibold">Date</th>
                                <th class="py-3 pr-4 font-semibold">Publish Year</th>
                                <th class="py-3 pr-4 font-semibold">Country</th>
                                <th class="py-3 pr-4 font-semibold">Status</th>
                            </tr>
                        </thead>
                        <tbody id="storedBody">
                            <tr>
                                <td colspan="7" class="py-6 text-slate-500 dark:text-slate-300">Loadingâ€¦</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Form -->
            <form id="conferenceForm"
                  method="post"
                  asp-controller="Conference"
                  asp-action="Submit"
                  class="space-y-6"
                  novalidate
                  enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <section class="overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm">
                    <header class="p-5 bg-card-header flex items-center gap-3">
                        <span class="material-symbols-outlined text-2xl text-primary">edit_document</span>
                        <div>
                            <h2 class="text-lg font-semibold text-white tracking-wide">Details</h2>
                            <p class="text-white/70 text-sm">Fill only the required fields</p>
                        </div>
                    </header>

                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-5">

                        <!-- PDF Upload (NOT saved) -->
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2" for="PdfFile">
                                Upload PDF (auto-read Abstract/Keywords)
                            </label>
                            <input id="PdfFile" name="PdfFile" type="file" accept="application/pdf"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary" />
                            <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">
                                Upload the PDF to auto-fill Abstract and Keywords. The file is not saved.
                            </p>
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2" for="MeetingName">Meeting Name <span class="text-secondary">*</span></label>
                            <input id="MeetingName" name="MeetingName" type="text" required maxlength="45"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., ICSE 2024" />
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2" for="ArticleTitle">Article Title <span class="text-secondary">*</span></label>
                            <input id="ArticleTitle" name="ArticleTitle" type="text" required maxlength="45"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., Smart Teaching Assistant" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2" for="Authors">Authors <span class="text-secondary">*</span></label>
                            <input id="Authors" name="Authors" type="text" required maxlength="45"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., John Doe; Jane Doe" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2" for="DayMonthYear">Date <span class="text-secondary">*</span></label>
                            <input id="DayMonthYear" name="DayMonthYear" type="date" required
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2" for="PublishYear">Publish Year <span class="text-secondary">*</span></label>
                            <input id="PublishYear" name="PublishYear" type="number" required min="1900" max="2200"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., 2024" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2" for="Country">Country <span class="text-secondary">*</span></label>
                            <input id="Country" name="Country" type="text" required maxlength="45"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., Thailand" />
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2" for="Keywords">Keywords <span class="text-secondary">*</span></label>
                            <input id="Keywords" name="Keywords" type="text" required maxlength="1000"
                                   class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                   placeholder="e.g., AI, Education, Neural Networks" />
                        </div>

                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium mb-2" for="Abstract">Abstract <span class="text-secondary">*</span></label>
                            <textarea id="Abstract" name="Abstract" rows="5" required maxlength="4000"
                                      class="w-full rounded-xl border-slate-200 dark:border-white/10 dark:bg-[#0b1220] focus:ring-primary focus:border-primary"
                                      placeholder="Write the abstract here..."></textarea>
                        </div>

                    </div>
                </section>

                <section class="flex flex-col sm:flex-row gap-3 justify-end">
                    <button type="submit"
                            class="py-2.5 px-5 rounded-xl bg-btn-gradient text-white font-medium shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all">
                        Submit
                    </button>
                    <button type="reset" id="resetBtn"
                            class="py-2.5 px-5 rounded-xl border border-slate-200 dark:border-white/10 bg-white dark:bg-transparent hover:bg-slate-50 dark:hover:bg-white/5 transition-all">
                        Clear
                    </button>
                </section>
            </form>
        </div>
    </main>

    <footer class="py-8 px-6 text-center border-t border-slate-200 dark:border-white/10 bg-white dark:bg-background-dark mt-auto">
        <p class="text-slate-500 dark:text-slate-400 text-sm">Â© 2024 Rangsit University. Intelligent Experience.</p>
    </footer>

    <style>
        .toast {
            position: fixed;
            right: 18px;
            bottom: 18px;
            z-index: 9999;
            padding: 12px 14px;
            border-radius: 14px;
            background: rgba(15,23,42,.92);
            color: #fff;
            border: 1px solid rgba(255,255,255,.12);
            box-shadow: 0 10px 30px rgba(0,0,0,.25);
            opacity: 0;
            transform: translateY(10px);
            transition: .2s ease;
            max-width: 460px;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }
    </style>

    <script>
        const $ = (s, r=document) => r.querySelector(s);
        const form = $("#conferenceForm");
        const storedBody = $("#storedBody");

        const toastEl = document.createElement("div");
        toastEl.className = "toast";
        document.body.appendChild(toastEl);

        function toast(msg, ms=3500){
          toastEl.textContent = msg;
          toastEl.classList.add("show");
          setTimeout(()=> toastEl.classList.remove("show"), ms);
        }

        function escapeHtml(input){
          return String(input ?? "").replace(/[&<>"']/g, m => ({
            '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#039;'
          }[m]));
        }

        function formatDate(value){
          if(!value) return "â€”";
          const d = new Date(value);
          if(!Number.isNaN(d.valueOf())) return d.toLocaleDateString();
          return String(value);
        }

        function getStatusText(code){
          switch(code){
            case "W": return "Pending";
            case "A": return "Approved";
            case "R": return "Rejected";
            default: return code || "â€”";
          }
        }

        function getStatusBadge(code){
          const text = getStatusText(code);
          if(code === "A") return `<span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-500/15 text-green-400 border border-green-500/30">${text}</span>`;
          if(code === "R") return `<span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-500/15 text-red-400 border border-red-500/30">${text}</span>`;
          return `<span class="px-3 py-1 rounded-full text-xs font-semibold bg-yellow-500/15 text-yellow-300 border border-yellow-500/30">${text}</span>`;
        }

        async function loadStored(){
          const url = "@Url.RouteUrl("Staff_Conference_List")";
          try{
            const resp = await fetch(url, { headers: { "Accept":"application/json" } });
            if(!resp.ok) throw new Error(await resp.text());
            const data = await resp.json();
            renderStored(Array.isArray(data) ? data : []);
          } catch {
            storedBody.innerHTML = `<tr><td colspan="7" class="py-6 text-slate-500 dark:text-slate-300">Failed to load submissions.</td></tr>`;
          }
        }

        function renderStored(items){
          if(!items.length){
            storedBody.innerHTML = `<tr><td colspan="7" class="py-6 text-slate-500 dark:text-slate-300">No submissions yet.</td></tr>`;
            return;
          }

          storedBody.innerHTML = items.map(x => `
            <tr class="border-b border-slate-200 dark:border-white/10">
              <td class="py-3 pr-4">${escapeHtml(x.meeting_name ?? "â€”")}</td>
              <td class="py-3 pr-4">${escapeHtml(x.article_title ?? "â€”")}</td>
              <td class="py-3 pr-4">${escapeHtml(x.authors ?? "â€”")}</td>
              <td class="py-3 pr-4">${escapeHtml(formatDate(x.day_month_year))}</td>
              <td class="py-3 pr-4">${escapeHtml(x.publish_year)}</td>
              <td class="py-3 pr-4">${escapeHtml(x.country ?? "â€”")}</td>
              <td class="py-3 pr-4">${getStatusBadge(x.status)}</td>
            </tr>
          `).join("");
        }

        $("#PdfFile").addEventListener("change", async () => {
          const file = $("#PdfFile").files?.[0];
          if(!file) return;

          if(!(file.type === "application/pdf" || file.name.toLowerCase().endsWith(".pdf"))){
            toast("âš ï¸ Please upload a PDF file.");
            $("#PdfFile").value = "";
            return;
          }

          const token = form.querySelector('input[name="__RequestVerificationToken"]')?.value;

          const fd = new FormData();
          fd.append("pdf", file);

          try{
            toast("ðŸ“„ Reading PDFâ€¦", 1500);

            const resp = await fetch("@Url.Action("ExtractFromPdf", "Conference")", {
              method: "POST",
              headers: token ? { "RequestVerificationToken": token } : {},
              body: fd
            });

            if(resp.ok){
              const data = await resp.json();
              if(data?.abstract) $("#Abstract").value = data.abstract;
              if(data?.keywords) $("#Keywords").value = data.keywords;

              if(!data?.abstract && !data?.keywords){
                toast("âš ï¸ Could not detect information in this PDF.");
              } else {
                toast("âœ… Filled information from PDF!");
              }
            } else {
              const msg = await resp.text();
              toast(`âŒ ${resp.status}: ${msg}`);
            }
          } catch {
            toast("âŒ Network error while reading PDF.");
          }
        });

        form.addEventListener("submit", async (e)=>{
          e.preventDefault();

          const meetingName = $("#MeetingName").value.trim();
          const articleTitle = $("#ArticleTitle").value.trim();
          const authors = $("#Authors").value.trim();
          const dayMonthYear = $("#DayMonthYear").value;
          const publishYear = $("#PublishYear").value;
          const country = $("#Country").value.trim();
          const abstractText = $("#Abstract").value.trim();
          const keywords = $("#Keywords").value.trim();

          if(!meetingName || !articleTitle || !authors || !dayMonthYear || !publishYear || !country || !abstractText || !keywords){
            toast("âš ï¸ Please complete all required fields.");
            return;
          }

          if(!confirm("Submit this conference record?")) return;

          const token = form.querySelector('input[name="__RequestVerificationToken"]')?.value;
          const fd = new FormData(form);

          try{
            const resp = await fetch("@Url.Action("Submit", "Conference")", {
              method: "POST",
              headers: token ? { "RequestVerificationToken": token } : {},
              body: fd
            });

            if(resp.ok){
              toast("âœ… Saved successfully!");
              form.reset();
              loadStored();
            } else {
              const msg = await resp.text();
              toast(`âŒ ${resp.status}: ${msg}`);
            }
          } catch {
            toast("âŒ Network error while saving.");
          }
        });

        $("#resetBtn").addEventListener("click", ()=> toast("Form cleared."));
        loadStored();
    </script>
</body>
</html>
