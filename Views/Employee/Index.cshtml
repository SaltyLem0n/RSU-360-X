@{
    Layout = null; // Using standalone layout as per provided HTML
}
<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - Staff Dashboard</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap"
        rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
        rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554", // Deep Blue
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                    },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                    }
                },
            },
        };
    </script>
</head>

<body
    class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-white font-sans transition-colors duration-500 overflow-x-hidden min-h-screen flex flex-col">
    <nav
        class="fixed top-0 left-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10 shadow-sm transition-colors duration-500">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-4">
                <div class="flex items-center">
                    <img alt="RSU Logo"
                        class="h-10 w-auto object-contain brightness-0 dark:brightness-100 dark:invert-0 invert"
                        src="/assets/img/rsu_logo.png" />
                </div>
            </div>
            <div class="flex items-center gap-4 md:gap-6">
                <div class="hidden md:flex flex-col items-end">
                    <span class="text-sm font-display font-medium text-slate-900 dark:text-white">Welcome,
                        @Context.Session.GetString("DisplayName")</span>
                    <span class="text-xs text-slate-500 dark:text-slate-400">@Context.Session.GetString("Role")</span>
                </div>
                <div
                    class="h-8 w-8 rounded-full bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-md">
                    @(Context.Session.GetString("DisplayName")?.Substring(0, 2).ToUpper() ?? "US")
                </div>
                <a href="@Url.Action("Logout", "Login")"
                    class="group relative ml-2 flex items-center gap-2 overflow-hidden rounded-xl bg-red-50 px-4 py-2 text-sm font-medium text-red-600 transition-all duration-300 hover:-translate-y-0.5 hover:bg-red-500 hover:text-white hover:shadow-lg hover:shadow-red-500/30 active:scale-95 dark:bg-red-500/10 dark:text-red-400 dark:hover:bg-red-500 dark:hover:text-white">
                    <span>Logout</span>
                    <span
                        class="material-symbols-outlined text-[18px] transition-transform duration-300 group-hover:translate-x-1">logout</span>
                </a>
            </div>
        </div>
    </nav>
    <main class="flex-grow pt-28 pb-12 px-6 lg:px-12 w-full">
        <div class="max-w-7xl mx-auto">
            <div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-display font-bold text-slate-900 dark:text-white mb-2">
                        Staff Dashboard
                    </h1>
                    <p class="text-slate-500 dark:text-slate-400">Manage your academic and administrative tasks
                        efficiently.</p>
                </div>
                <div class="text-sm text-slate-400 font-mono">
                    Academic Year @DateTime.Now.Year / Semester 1
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @{
                    var dept = Context.Session.GetString("Department");
                    var isHr = !string.IsNullOrEmpty(dept) && (dept == "Human Resources" || dept == "HR" || dept ==
                    "สำนักบุคคล");
                }
                @if (isHr)
                {
                    <div
                        class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                        <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                            <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                                <span class="material-symbols-outlined text-9xl text-white">admin_panel_settings</span>
                            </div>
                            <div
                                class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                                <span class="material-symbols-outlined text-3xl text-secondary">admin_panel_settings</span>
                            </div>
                            <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Evaluation Review</h3>
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                                Review staff performance metrics, approve evaluation forms, and manage departmental KPIs.
                            </p>
                            <!-- Link removed for now as per instructions, or can point to an HR specific controller if one exists -->
                            <button disabled
                                class="w-full py-2.5 px-4 rounded-lg bg-gray-400 text-white font-medium text-sm cursor-not-allowed flex items-center justify-center gap-2">
                                Coming Soon
                            </button>
                        </div>
                    </div>
                }
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">trending_up</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">trending_up</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Performance Eval</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Submit your self-assessment report, teaching portfolio, and research contributions for the
                            year.
                        </p>
                        <a href="@Url.Action("Index", "Section1Personal")"
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">palette</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">palette</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Arts &amp; Culture</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Register for university cultural events, submit activity logs, and view upcoming art
                            exhibitions.
                        </p>
                        <button
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">task_alt</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">task_alt</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Assigned Tasks</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Track special assignments, committee responsibilities, and ad-hoc projects assigned by the
                            dean.
                        </p>
                        <button
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">folder_shared</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">folder_shared</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Administrative Work
                        </h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Access e-Document systems, leave requests, room booking, and general administrative forms.
                        </p>
                        <button
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">support_agent</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">support_agent</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Support Tasks</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Report facility issues, request IT support, and access campus maintenance services.
                        </p>
                        <button
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">menu_book</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">menu_book</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Academic Resources</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Quick access to digital libraries, research databases, LMS, and teaching materials.
                        </p>
                        <a href="@Url.Action("Index", "Academic")"
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>
                <div
                    class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">badge</span>
                        </div>
                        <div
                            class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">badge</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Visa Review</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Manage document processing for international staff work permits and student visas.
                        </p>
                        <button
                            class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer
        class="py-8 px-6 text-center border-t border-slate-200 dark:border-white/10 bg-white dark:bg-background-dark mt-auto">
        <div class="flex flex-col items-center justify-center gap-2">
            <p class="text-slate-500 dark:text-slate-400 text-sm">
                © 2024 Rangsit University. Intelligent Experience.
            </p>
        </div>
    </footer>
</body>

</html>
