@{
    Layout = null;
}
<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />    
    <title>RSUX - Academic Resources</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
          rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: { DEFAULT: "0.75rem" },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                    }
                },
            },
        };
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-white font-sans transition-colors duration-500 overflow-x-hidden min-h-screen flex flex-col">
    <nav class="fixed top-0 left-0 w-full z-50 px-6 py-4 bg-white/90 dark:bg-[#0f172a]/90 backdrop-blur-md border-b border-slate-200 dark:border-white/10 shadow-sm">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
            <div class="flex items-center gap-4">
                <a href="/Employee" class="flex items-center gap-2 text-slate-500 hover:text-primary transition-colors">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span>Back to Dashboard</span>
                </a>
            </div>
            <div class="font-display font-semibold text-lg">Academic Resources</div>
            <div class="w-24"></div> <!-- Spacer -->
        </div>
    </nav>

    <main class="flex-grow pt-28 pb-12 px-6 lg:px-12 w-full">
        <div class="max-w-7xl mx-auto">
            

            <!-- Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

                <!-- Teaching Material -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">school</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">school</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Teaching Material</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Create, upload, or update teaching resources such as lesson plans, slides, and worksheets.
                        </p>
                        <a href="@Url.Action("Index", "TeachingMaterial")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Books -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">menu_book</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">menu_book</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Books</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Upload books to capture details like title, author, ISBN, publisher, and year.
                        </p>
                        <a href="@Url.Action("Index", "Books")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Research Grant -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">paid</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">paid</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Research Grant</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Record grant information including project title, funder, amount, duration, and status.
                        </p>
                        <a href="@Url.Action("Index", "ResearchGrant")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Conference -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">campaign</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">campaign</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Conference</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Submit conference papers and automatically extract publication metadata.
                        </p>
                        <a href="@Url.Action("Index", "Conference")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Journal -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">description</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">description</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Journal</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Submit journal articles and extract key metadata for your records.
                        </p>
                        <a href="@Url.Action("Index", "Journal")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Patents -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">verified</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-primary">verified</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Patents</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Track patents and utility models with filing, publication, and ownership details.
                        </p>
                        <a href="@Url.Action("Index", "Patents")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

                <!-- Creation -->
                <div class="group flex flex-col overflow-hidden bg-white dark:bg-surface-dark border border-slate-200 dark:border-white/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="p-5 bg-card-header flex items-center gap-4 relative overflow-hidden">
                        <div class="absolute right-0 top-0 opacity-10 transform translate-x-1/4 -translate-y-1/4">
                            <span class="material-symbols-outlined text-9xl text-white">palette</span>
                        </div>
                        <div class="relative z-10 w-12 h-12 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 shadow-inner">
                            <span class="material-symbols-outlined text-3xl text-secondary">palette</span>
                        </div>
                        <h3 class="relative z-10 text-lg font-semibold text-white tracking-wide">Creation</h3>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-6 flex-grow">
                            Log creative works with achievement type, source, and publication/release date.
                        </p>
                        <a href="@Url.Action("Index", "Creation")"
                           class="w-full py-2.5 px-4 rounded-lg bg-btn-gradient text-white font-medium text-sm shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:brightness-110 transition-all flex items-center justify-center gap-2 group-hover:gap-3">
                            Go <span class="material-symbols-outlined text-lg">arrow_forward</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <footer class="py-8 px-6 text-center border-t border-slate-200 dark:border-white/10 bg-white dark:bg-background-dark mt-auto">
        <div class="flex flex-col items-center justify-center gap-2">
            <p class="text-slate-500 dark:text-slate-400 text-sm">
                Â© 2024 Rangsit University. Intelligent Experience.
            </p>
        </div>
    </footer>
</body>
</html>
