                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 7) Creation -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">palette</span>
