@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@model RSU_360_X.Models.ViewModels.Section1PersonalVm
@{
    Layout = null;

    // Logic to retrieve the current language and list of supported languages
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture.RequestCulture.UICulture;
    var cultureItems = LocOptions.Value.SupportedUICultures.ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
}
<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - Section 1: Personal Information</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap"
        rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
        rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                        "table-bg": "#1e293b",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                    },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                        'nav-active-gradient': 'linear-gradient(90deg, #22d3ee 0%, #ec4899 100%)',
                    }
                },
            },
        };
    </script>
    <style type="text/tailwindcss">
        @@layer utilities {
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }

            .scrollbar-hide {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
        }
    </style>
</head>

<body class="bg-background-dark text-white font-sans min-h-screen flex flex-col overflow-hidden">
    <!-- Top Navbar -->
    <nav
        class="fixed top-0 left-0 w-full z-50 px-4 md:px-6 py-4 bg-[#0f172a]/95 backdrop-blur-md border-b border-white/10 shadow-lg">
        <div class="flex items-center justify-between max-w-[1600px] mx-auto">
            <div class="flex items-center gap-4 md:gap-8">
                <label
                    class="lg:hidden p-1 -ml-1 text-white/80 hover:text-primary transition-colors cursor-pointer rounded-lg hover:bg-white/5"
                    for="mobile-menu-toggle">
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </label>
                <div class="flex items-center">
                    <a href="/">
                        <img alt="RSU Logo" class="h-8 md:h-10 w-auto object-contain" src="/assets/img/rsu_logo.png" />
                    </a>
                </div>
                <div class="h-8 w-px bg-white/20 hidden md:block"></div>
                <div class="hidden md:block">
                    <h2 class="text-lg font-display font-semibold tracking-tight">@Localizer["Form_Title"]</h2>
                </div>
            </div>
            <div class="flex items-center gap-4">

                <form id="selectLanguage" asp-controller="Culture" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" class="mr-4">
                    <div class="relative group">

                        <button type="button" class="flex items-center gap-2 px-3 py-2 rounded-xl bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-white/10 hover:text-primary dark:hover:text-primary transition-all duration-300 outline-none focus:ring-2 focus:ring-primary/50">
                            <span class="material-symbols-outlined text-[20px]">language</span>
                            <span class="text-sm font-semibold uppercase tracking-wide">
                                @currentCulture.TwoLetterISOLanguageName
                            </span>
                            <span class="material-symbols-outlined text-[18px] text-slate-400 transition-transform duration-300 group-hover:-rotate-180">
                                expand_more
                            </span>
                        </button>

                        <div class="absolute right-0 top-full mt-2 w-48 p-1.5 bg-white dark:bg-[#1e293b] border border-slate-100 dark:border-white/10 rounded-2xl shadow-xl shadow-slate-200/50 dark:shadow-black/50 opacity-0 invisible translate-y-2 group-hover:translate-y-0 group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 transform origin-top-right">

                            <div class="px-3 py-2 text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">
                                Select Language
                            </div>

                            @foreach (var culture in cultureItems)
                            {
                                var isActive = culture.Name == currentCulture.Name;
                                <button type="submit" name="culture" value="@culture.Name"
                                        class="w-full flex items-center justify-between px-3 py-2.5 rounded-xl text-sm font-medium transition-all duration-200
                                        @(isActive
                                                                                ? "bg-primary/10 text-primary"
                                                                                : "text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-primary")">

                                    <div class="flex items-center gap-3">
                                        <span>@culture.NativeName</span>
                                    </div>

                                    @if (isActive)
                                    {
                                        <span class="material-symbols-outlined text-[18px]">check_circle</span>
                                    }
                                </button>
                            }
                        </div>
                    </div>
                </form>

                <div class="flex flex-col items-end mr-2 hidden sm:flex">
                    <span class="text-sm font-display font-medium">@Model.EmpFname @Model.EmpLname</span>
                    <span
                        class="text-[10px] text-slate-400 uppercase tracking-widest">@(string.IsNullOrEmpty(Model.EmpFaculty)
                        ? Localizer["FacultyMember"].Value : Model.EmpFaculty)</span>
                </div>
                <div
                    class="h-9 w-9 md:h-10 md:w-10 rounded-full bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-md ring-2 ring-white/10">
                    @(Model.EmpFname?.FirstOrDefault())@(Model.EmpLname?.FirstOrDefault())
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Layout Wrapper -->
    <div class="flex flex-1 pt-[73px] relative">
        <input class="peer hidden" id="mobile-menu-toggle" type="checkbox" />
        <label
            class="fixed inset-0 bg-background-dark/80 backdrop-blur-sm z-30 lg:hidden hidden peer-checked:block transition-opacity duration-300"
            for="mobile-menu-toggle"></label>

        <!-- Sidebar -->
        <aside
            class="fixed left-0 top-[73px] w-64 h-[calc(100vh-73px)] bg-[#0f172a] border-r border-white/10 z-40 overflow-y-auto transform -translate-x-full lg:translate-x-0 peer-checked:translate-x-0 transition-transform duration-300 ease-out shadow-2xl lg:shadow-none">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6 lg:hidden border-b border-white/5 pb-4">
                    <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">@Localizer["Menu"]</span>
                    <label
                        class="text-slate-400 hover:text-white cursor-pointer transition-colors p-1 rounded-md hover:bg-white/5"
                        for="mobile-menu-toggle">
                        <span class="material-symbols-outlined">close</span>
                    </label>
                </div>
                <a class="flex items-center gap-3 px-4 py-3 mb-6 rounded-xl bg-white/5 text-slate-300 hover:text-white hover:bg-white/10 transition-all group" href="/Employee">
                    <span class="material-symbols-outlined text-primary">arrow_back</span>
                    <span class="text-sm font-bold">@Localizer["BackToDashboard"]</span>
                </a>
                <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-6 hidden lg:block">
                    @Localizer["EvaluationSections"]</p>
                <nav class="space-y-2">
                    <!-- Section 1 (Active) -->
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-nav-active-gradient text-white shadow-lg shadow-primary/20"
                        href="#">
                        <span class="material-symbols-outlined">person_outline</span>
                        <span class="text-sm font-bold">@Localizer["Nav_Personal"]</span>
                    </a>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                       href="/staff/evaluationform/section-2">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">school</span>
                        <span class="text-sm font-medium">@Localizer["Nav_TeachingSoon"]</span>
                    </a>

                    <!-- Section 3 -->
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="/staff/evaluationform/section-3">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">diversity_3</span>
                        <span class="text-sm font-medium">@Localizer["Nav_ServicesDuties"]</span>
                    </a>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="#">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">biotech</span>
                        <span class="text-sm font-medium">@Localizer["Section4Research"]</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="#">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">summarize</span>
                        <span class="text-sm font-medium">@Localizer["Nav_S4_Overall"]</span>
                    </a>
                </nav>
                <div class="mt-12 p-4 rounded-2xl bg-white/5 border border-white/10">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-xs text-slate-400">@Localizer["TotalProgress"]</span>
                        <span class="text-xs font-bold text-primary">25%</span>
                    </div>
                    <div class="w-full h-1.5 bg-white/10 rounded-full overflow-hidden">
                        <div class="w-1/4 h-full bg-gradient-to-r from-primary to-secondary"></div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main
            class="flex-1 h-[calc(100vh-73px)] overflow-y-auto scrollbar-hide bg-background-dark ml-0 lg:ml-64 transition-[margin] duration-300">
            <div class="max-w-6xl mx-auto p-4 md:p-8 lg:p-12">
                <div class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-4">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-display font-bold text-white mb-2">@Localizer["Nav_Personal"]
                        </h1>
                        <p class="text-sm md:text-base text-slate-400">@Localizer["Instructions_Text"]</p>
                    </div>
                    <div class="hidden"></div>
                </div>

                <!-- Existing Content Injected Here -->
                @if (TempData["Success"] != null)
                {
                        <div
                            class="mb-6 p-4 bg-emerald-500/20 border border-emerald-500/50 text-emerald-300 rounded-xl flex items-center gap-2">
                            <span class="material-symbols-outlined">check_circle</span>
                        @TempData["Success"]
                        </div>
                }

                <div class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="p-6 md:p-8">
                        <h2 class="text-xl font-display font-semibold mb-6 pb-4 border-b border-white/10 text-white">
                            @Localizer["Form_Subtitle"]
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 text-slate-300">
                            <!-- Read Only Fields -->
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_FirstName"] @Localizer["Label_LastName"]</label>
                                <div class="text-lg font-medium text-white">@Model.EmpFname @Model.EmpLname</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["EmployeeID"]</label>
                                <div class="text-lg font-medium font-mono text-white">@Model.EmpId</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_Department"]</label>
                                <div class="text-base">@Model.EmpDepartment</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_FacultyOrCenter"]</label>
                                <div class="text-base">@Model.EmpFaculty</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_Position"]</label>
                                <div class="text-base">@Model.EmpPos</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_AcademicRank"]</label>
                                <div class="text-base">@Model.EmpAcademicPos</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["HighestDegree"]</label>
                                <div class="text-base">@Model.EmpHEducation</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_AgeYears"]</label>
                                <div class="text-base">@Model.EmpAge</div>
                            </div>
                            <div>
                                <label
                                    class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">@Localizer["Label_StartDate"]</label>
                                <div class="text-base">@Model.EmpStartDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>

                        <h2
                            class="text-xl font-display font-semibold mb-6 pb-4 border-b border-white/10 mt-10 text-white">
                            @Localizer["Legend_LecturerFocus"]
                        </h2>

                        <form method="post" class="space-y-6">
                            @Html.AntiForgeryToken()

                            <div class="space-y-4">
                                <label
                                    class="flex items-start gap-4 p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 cursor-pointer transition-colors">
                                    <input type="checkbox" asp-for="IsTeachingFocused"
                                        class="mt-1 rounded border-slate-600 bg-slate-700 text-primary focus:ring-primary w-5 h-5" />
                                    <div>
                                        <span class="block font-medium text-white">@Localizer["Focus_Teaching"]</span>
                                        <span class="text-sm text-slate-400">@Localizer["TeachingFocusedDesc"]</span>
                                    </div>
                                </label>

                                <label
                                    class="flex items-start gap-4 p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 cursor-pointer transition-colors">
                                    <input type="checkbox" asp-for="IsAdministrationFocused"
                                        class="mt-1 rounded border-slate-600 bg-slate-700 text-primary focus:ring-primary w-5 h-5" />
                                    <div>
                                        <span class="block font-medium text-white">@Localizer["Focus_Admin"]</span>
                                        <span class="text-sm text-slate-400">@Localizer["AdministrationFocusedDesc"]</span>
                                    </div>
                                </label>

                                <div class="border border-white/10 rounded-xl p-4 space-y-4 bg-white/5">
                                    <label class="flex items-start gap-4 cursor-pointer">
                                        <input type="checkbox" asp-for="IsResearchFocused"
                                            class="mt-1 rounded border-slate-600 bg-slate-700 text-primary focus:ring-primary w-5 h-5" />
                                        <div>
                                            <span class="block font-medium text-white">@Localizer["Focus_Research"]</span>
                                            <span class="text-sm text-slate-400">@Localizer["ResearchFocusedDesc"]</span>
                                        </div>
                                    </label>

                                    <div class="ml-9">
                                        <label class="block text-sm font-medium mb-2 text-slate-300">@Localizer["Label_ApprovedAcademicYear"]</label>
                                        <input asp-for="ResearchApprovedYearAcademic"
                                            class="block w-full rounded-xl border-white/10 bg-black/20 text-white text-sm py-2.5 px-4 focus:ring-2 focus:ring-primary focus:border-transparent placeholder-slate-600"
                                            placeholder="e.g. 2567" />
                                        <span class="text-xs text-slate-500 mt-2 block">@Localizer["Placeholder_ApprovedAcademicYear"]</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-6 flex justify-end border-t border-white/10">
                                <button type="submit"
                                    class="bg-emerald-600 hover:bg-emerald-500 text-white px-8 py-3 rounded-xl font-bold text-sm tracking-wide shadow-lg shadow-emerald-500/20 transition-all flex items-center gap-2">
                                    <span class="material-symbols-outlined text-lg">save</span>
                                    @Localizer["Button_SaveSection1"]
                                </button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>

            <footer class="py-12 px-8 border-t border-white/10 bg-[#0f172a] text-center mt-auto">
                <div class="flex flex-col items-center gap-4">
                    <img alt="RSU Logo Small" class="h-6 w-auto opacity-50 grayscale"
                        src="https://lh3.googleusercontent.com/aida-public/AB6AXuCILjuvv7ETI4W7EZOmChHhbwOGIxsInYLMPMS7upR1_xGpQNU2QzI5U241L0xfVgkwy9w6rPShKHauYR-ZhuipnzHnS9mabS1vZVlsgtDEll1SbCpOroY5USAMkAG2biEA12ricLZ60dW5goOCnhE9sjRp4FshXjRR2N2s5hWLqyVT_GuOVmE1ZAQIiR1ZIWmJqz9XX5d8_lECOGKU43IXdK_1g_rEVx0m_v28xxUp6gAYKetGPwF7lxJGWS3rDaRVrSfDy38omr6s" />
                    <p class="text-slate-500 text-sm">
                        @Localizer["FooterCopyright"]
                    </p>
                    <div class="flex gap-6 text-xs text-slate-600 font-medium flex-wrap justify-center">
                        <a class="hover:text-primary transition-colors" href="#">@Localizer["SupportDesk"]</a>
                        <a class="hover:text-primary transition-colors" href="#">@Localizer["UserDocumentation"]</a>
                        <a class="hover:text-primary transition-colors" href="#">@Localizer["AcademicPolicy"]</a>
                    </div>
                </div>
            </footer>
        </main>
    </div>
</body>

</html>
