@model RSU_360_X.Models.ViewModels.Section2AcademicVm
@{
    Layout = null;

    // Logic to retrieve the current language and list of supported languages
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture.RequestCulture.UICulture;
    var cultureItems = LocOptions.Value.SupportedUICultures.ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
}
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - @Localizer["AppTitle"]</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Prompt:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                        "table-bg": "#1e293b",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: { DEFAULT: "0.75rem" },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                        'nav-active-gradient': 'linear-gradient(90deg, #22d3ee 0%, #ec4899 100%)',
                    }
                },
            },
        };
    </script>

    <style type="text/tailwindcss">
        @@layer utilities {
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }

            .scrollbar-hide {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
        }
    </style>
</head>

<body class="bg-background-dark text-white font-sans min-h-screen flex flex-col overflow-hidden">

    <!-- TOP NAV (same style as Section 3) -->
    <nav class="fixed top-0 left-0 w-full z-50 px-4 md:px-6 py-4 bg-[#0f172a]/95 backdrop-blur-md border-b border-white/10 shadow-lg">
        <div class="flex items-center justify-between max-w-[1600px] mx-auto">
            <div class="flex items-center gap-4 md:gap-8">
                <label class="lg:hidden p-1 -ml-1 text-white/80 hover:text-primary transition-colors cursor-pointer rounded-lg hover:bg-white/5"
                       for="mobile-menu-toggle">
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </label>

                <div class="flex items-center">
                    <a href="/">
                        <img alt="RSU Logo" class="h-8 md:h-10 w-auto object-contain" src="/assets/img/rsu_logo.png" />
                    </a>
                </div>

                <div class="h-8 w-px bg-white/20 hidden md:block"></div>

                <div class="hidden md:block">
                    <h2 class="text-lg font-display font-semibold tracking-tight">@Localizer["AppTitle"]</h2>
                </div>
            </div>

            <div class="flex items-center gap-4">
                <form id="selectLanguage" asp-controller="Culture" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" class="mr-4">
                    <div class="relative group">

                        <button type="button" class="flex items-center gap-2 px-3 py-2 rounded-xl bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-white/10 text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-white/10 hover:text-primary dark:hover:text-primary transition-all duration-300 outline-none focus:ring-2 focus:ring-primary/50">
                            <span class="material-symbols-outlined text-[20px]">language</span>
                            <span class="text-sm font-semibold uppercase tracking-wide">
                                @currentCulture.TwoLetterISOLanguageName
                            </span>
                            <span class="material-symbols-outlined text-[18px] text-slate-400 transition-transform duration-300 group-hover:-rotate-180">
                                expand_more
                            </span>
                        </button>

                        <div class="absolute right-0 top-full mt-2 w-48 p-1.5 bg-white dark:bg-[#1e293b] border border-slate-100 dark:border-white/10 rounded-2xl shadow-xl shadow-slate-200/50 dark:shadow-black/50 opacity-0 invisible translate-y-2 group-hover:translate-y-0 group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 transform origin-top-right">

                            <div class="px-3 py-2 text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">
                                Select Language
                            </div>

                            @foreach (var culture in cultureItems)
                            {
                                var isActive = culture.Name == currentCulture.Name;
                                <button type="submit" name="culture" value="@culture.Name"
                                        class="w-full flex items-center justify-between px-3 py-2.5 rounded-xl text-sm font-medium transition-all duration-200
                                        @(isActive
                                                                                ? "bg-primary/10 text-primary"
                                                                                : "text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-primary")">

                                    <div class="flex items-center gap-3">
                                        <span>@culture.NativeName</span>
                                    </div>

                                    @if (isActive)
                                    {
                                        <span class="material-symbols-outlined text-[18px]">check_circle</span>
                                    }
                                </button>
                            }
                        </div>
                    </div>
                </form>

                <div class="flex flex-col items-end mr-2 hidden sm:flex">
                    <span class="text-sm font-display font-medium">@Model.EmpFname @Model.EmpLname</span>
                    <span class="text-[10px] text-slate-400 uppercase tracking-widest">
                        @(string.IsNullOrEmpty(Model.EmpFaculty) ? Localizer["FacultyMember"].Value : Model.EmpFaculty)
                    </span>
                </div>

                <div class="h-9 w-9 md:h-10 md:w-10 rounded-full bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-md ring-2 ring-white/10">
                    @(Model.EmpFname?.FirstOrDefault())@(Model.EmpLname?.FirstOrDefault())
                </div>
            </div>
        </div>
    </nav>

    <div class="flex flex-1 pt-[73px] relative">
        <input class="peer hidden" id="mobile-menu-toggle" type="checkbox" />
        <label class="fixed inset-0 bg-background-dark/80 backdrop-blur-sm z-30 lg:hidden hidden peer-checked:block transition-opacity duration-300"
               for="mobile-menu-toggle"></label>

        <!-- LEFT SIDEBAR (same style as Section 3) -->
        <aside class="fixed left-0 top-[73px] w-64 h-[calc(100vh-73px)] bg-[#0f172a] border-r border-white/10 z-40 overflow-y-auto transform -translate-x-full lg:translate-x-0 peer-checked:translate-x-0 transition-transform duration-300 ease-out shadow-2xl lg:shadow-none">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6 lg:hidden border-b border-white/5 pb-4">
                    <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">@Localizer["Menu"]</span>
                    <label class="text-slate-400 hover:text-white cursor-pointer transition-colors p-1 rounded-md hover:bg-white/5"
                           for="mobile-menu-toggle">
                        <span class="material-symbols-outlined">close</span>
                    </label>
                </div>

                <a class="flex items-center gap-3 px-4 py-3 mb-6 rounded-xl bg-white/5 text-slate-300 hover:text-white hover:bg-white/10 transition-all group" href="/Employee"><span class="material-symbols-outlined text-primary">arrow_back</span><span class="text-sm font-bold">@Localizer["Btn_BackToDashboard"]</span></a>
                <nav class="space-y-2">
                <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-6 hidden lg:block">
                    @Localizer["Menu_EvaluationSections"]
                </p>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                       href="/staff/evaluationform/section-1">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">person_outline</span>
                        <span class="text-sm font-medium">@Localizer["Nav_Personal"]</span>
                    </a>

                    <!-- ACTIVE: Section 2 -->
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-nav-active-gradient text-white shadow-lg shadow-primary/20"
                       href="#">
                        <span class="material-symbols-outlined">school</span>
                        <span class="text-sm font-bold">@Localizer["DropDown2"]</span>
                    </a>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                       href="/staff/evaluationform/section-3">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">diversity_3</span>
                        <span class="text-sm font-medium">@Localizer["Nav_ServicesDuties"]</span>
                    </a>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                       href="/staff/evaluationform/section-4">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">biotech</span>
                        <span class="text-sm font-medium">@Localizer["Nav_PerfEval"]</span>
                    </a>

                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                       href="/staff/evaluationform/summary">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">summarize</span>
                        <span class="text-sm font-medium">@Localizer["Menu_Summary"]</span>
                    </a>
                </nav>

                <div class="mt-12 p-4 rounded-2xl bg-white/5 border border-white/10">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-xs text-slate-400">@Localizer["Progress_Section2"]</span>
                        <span class="text-xs font-bold text-primary">50%</span>
                    </div>
                    <div class="w-full h-1.5 bg-white/10 rounded-full overflow-hidden">
                        <div class="w-1/3 h-full bg-gradient-to-r from-primary to-secondary"></div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- MAIN -->
        <main class="flex-1 h-[calc(100vh-73px)] overflow-y-auto scrollbar-hide bg-background-dark ml-0 lg:ml-64 transition-[margin] duration-300">
            <div class="max-w-6xl mx-auto p-4 md:p-8 lg:p-12">

                <!-- Page Header -->
                <div class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-4">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-display font-bold text-white mb-2">@Localizer["S2_2_Title"]</h1>
                        <p class="text-sm md:text-base text-slate-400">
                            @Localizer["Form_Section2_Subtitle"]
                        </p>
                    </div>
                    <div class="text-xs text-slate-500 font-mono bg-white/5 px-4 py-2 rounded-lg border border-white/5 w-fit">
                        @Localizer["Label_AcadYear"]: @Model.AcadYear â€” @Localizer["Label_Updated"]: @DateTime.Now.ToString("dd MMM")
                    </div>
                </div>

                <div class="space-y-8 pb-12">

                    <!-- 1) Teaching Materials (Approved only - filtered in Controller) -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">menu_book</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_1_Title"]</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[900px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Subject"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["PH_MaterialTitle"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Type"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_CoAuthors"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Year"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.TeachingMaterials.Any())
                                    {
                                        foreach (var x in Model.TeachingMaterials)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.Subject</td>
                                                <td class="px-6 py-4 text-slate-300">@x.TeachingMaterial</td>
                                                <td class="px-6 py-4">@x.Type</td>
                                                <td class="px-6 py-4 text-slate-300">@x.CoProducer</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.DayMonthYear</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 2) Books -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">auto_stories</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_2_Title"]</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[900px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Title3"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["PH_BookTitle"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Type"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Year"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.Books.Any())
                                    {
                                        foreach (var x in Model.Books)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.NameOfWork</td>
                                                <td class="px-6 py-4 text-slate-300">@x.TeachingBook</td>
                                                <td class="px-6 py-4">@x.Type</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.DayMonthYear</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 3) Research Grant -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">analytics</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_3_Title"]</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[1100px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Topic"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Position"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_Grantor"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_DurationMonths"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_AgreementDuration"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.ResearchGrants.Any())
                                    {
                                        foreach (var x in Model.ResearchGrants)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.ResearchTopic</td>
                                                <td class="px-6 py-4 text-slate-300">@x.Position</td>
                                                <td class="px-6 py-4">@x.Sponsor</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.NumberOfYear</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.ContactPeriod</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 4) Conference -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">groups</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_4_Title"]</h2>
                            </div>
                        </div>

                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[900px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_ConferenceName"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_ArticleTitle"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Author"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Year"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_PublicationYear"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Country"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.Conferences.Any())
                                    {
                                        foreach (var x in Model.Conferences)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.MeetingName</td>
                                                <td class="px-6 py-4 text-slate-300">@x.ArticleTitle</td>
                                                <td class="px-6 py-4 text-slate-300">@x.Authors</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.DayMonthYear</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.PublishYear</td>
                                                <td class="px-6 py-4">@x.Country</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="6" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 5) Journal -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">newspaper</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_5_Title"]</h2>
                            </div>
                        </div>

                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[950px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_ArticleTitle"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Author"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_JournalPublisher"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_PublicationYear"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_DOI"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.Journals.Any())
                                    {
                                        foreach (var x in Model.Journals)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.ArticleTitle</td>
                                                <td class="px-6 py-4 text-slate-300">@x.Author</td>
                                                <td class="px-6 py-4">@x.Publisher</td>
                                                <td class="px-6 py-4 font-mono text-sm">@($"{x.YearPublication:0000}-{x.MonthPublication:00}")</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.Doi</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="px-6 py-6 text-center text-slate-500">@Localizer["Common_NoData"]</td></tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </section>

                    <!-- 6) Patents -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">verified</span>
                                <h2 class="text-lg font-semibold tracking-wide">@Localizer["S2_2_6_Title"]</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[900px]">
                                <thead>
                                    <tr class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Title3"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["S2_PatentNumber"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Type"]</th>
                                        <th class="px-6 py-4 font-semibold">@Localizer["Common_Year"]</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @if (Model.Patents.Any())
                                    {
                                        foreach (var x in Model.Patents)
                                        {
                                            <tr class="hover:bg-white/5 transition-colors">
                                                <td class="px-6 py-4 font-medium">@x.NameOfWork</td>
                                                <td class="px-6 py-4 text-slate-300">@x.CopyrightNumber</td>
                                                <td class="px-6 py-4">@x.Type</td>
                                                <td class="px-6 py-4 font-mono text-sm">@x.DayMonthYear</td>
