@model RSU_360_X.Models.ViewModels.AcademicServicesViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>RSUX - Section 3: Evaluation Form</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;family=Prompt:wght@300;400;500;600&amp;display=swap"
        rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
        rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        secondary: "#ec4899",
                        "background-light": "#f1f5f9",
                        "background-dark": "#0f172a",
                        "surface-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "card-header": "#172554",
                        "table-bg": "#1e293b",
                    },
                    fontFamily: {
                        display: ["Prompt", "sans-serif"],
                        sans: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                    },
                    backgroundImage: {
                        'hero-gradient': 'linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%)',
                        'btn-gradient': 'linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%)',
                        'nav-active-gradient': 'linear-gradient(90deg, #22d3ee 0%, #ec4899 100%)',
                    }
                },
            },
        };
    </script>
    <style type="text/tailwindcss">
        @@layer utilities {
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }

            .scrollbar-hide {
                -ms-overflow-style: none;
                scrollbar-width: none;
            }
        }
    </style>
</head>

<body class="bg-background-dark text-white font-sans min-h-screen flex flex-col overflow-hidden">
    <nav
        class="fixed top-0 left-0 w-full z-50 px-4 md:px-6 py-4 bg-[#0f172a]/95 backdrop-blur-md border-b border-white/10 shadow-lg">
        <div class="flex items-center justify-between max-w-[1600px] mx-auto">
            <div class="flex items-center gap-4 md:gap-8">
                <label
                    class="lg:hidden p-1 -ml-1 text-white/80 hover:text-primary transition-colors cursor-pointer rounded-lg hover:bg-white/5"
                    for="mobile-menu-toggle">
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </label>
                <div class="flex items-center">
                    <a href="/">
                        <img alt="RSU Logo" class="h-8 md:h-10 w-auto object-contain" src="/assets/img/rsu_logo.png" />
                    </a>
                </div>
                <div class="h-8 w-px bg-white/20 hidden md:block"></div>
                <div class="hidden md:block">
                    <h2 class="text-lg font-display font-semibold tracking-tight">Staff Evaluation System</h2>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <div class="flex flex-col items-end mr-2 hidden sm:flex">
                    <span class="text-sm font-display font-medium">@Model.EmpFname @Model.EmpLname</span>
                    <span
                        class="text-[10px] text-slate-400 uppercase tracking-widest">@(string.IsNullOrEmpty(Model.EmpFaculty)
                        ? "Faculty Member" : Model.EmpFaculty)</span>
                </div>
                <div
                    class="h-9 w-9 md:h-10 md:w-10 rounded-full bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-md ring-2 ring-white/10">
                    @(Model.EmpFname?.FirstOrDefault())@(Model.EmpLname?.FirstOrDefault())
                </div>
            </div>
        </div>
    </nav>
    <div class="flex flex-1 pt-[73px] relative">
        <input class="peer hidden" id="mobile-menu-toggle" type="checkbox" />
        <label
            class="fixed inset-0 bg-background-dark/80 backdrop-blur-sm z-30 lg:hidden hidden peer-checked:block transition-opacity duration-300"
            for="mobile-menu-toggle"></label>
        <aside
            class="fixed left-0 top-[73px] w-64 h-[calc(100vh-73px)] bg-[#0f172a] border-r border-white/10 z-40 overflow-y-auto transform -translate-x-full lg:translate-x-0 peer-checked:translate-x-0 transition-transform duration-300 ease-out shadow-2xl lg:shadow-none">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6 lg:hidden border-b border-white/5 pb-4">
                    <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Menu</span>
                    <label
                        class="text-slate-400 hover:text-white cursor-pointer transition-colors p-1 rounded-md hover:bg-white/5"
                        for="mobile-menu-toggle">
                        <span class="material-symbols-outlined">close</span>
                    </label>
                </div>
                <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-6 hidden lg:block">
                    Evaluation Sections</p>
                <nav class="space-y-2">
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="/staff/evaluationform/section-1">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">person_outline</span>
                        <span class="text-sm font-medium">Section 1: General Info</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="#">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">school</span>
                        <span class="text-sm font-medium">Section 2: Teaching</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-nav-active-gradient text-white shadow-lg shadow-primary/20"
                        href="#">
                        <span class="material-symbols-outlined">diversity_3</span>
                        <span class="text-sm font-bold">Section 3: Services &amp; Duties</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="#">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">biotech</span>
                        <span class="text-sm font-medium">Section 4: Research</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-white/5 transition-all group"
                        href="#">
                        <span
                            class="material-symbols-outlined group-hover:text-primary transition-colors">summarize</span>
                        <span class="text-sm font-medium">Summary &amp; Submit</span>
                    </a>
                </nav>
                <div class="mt-12 p-4 rounded-2xl bg-white/5 border border-white/10">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-xs text-slate-400">Section 3 Progress</span>
                        <span class="text-xs font-bold text-primary">75%</span>
                    </div>
                    <div class="w-full h-1.5 bg-white/10 rounded-full overflow-hidden">
                        <div class="w-3/4 h-full bg-gradient-to-r from-primary to-secondary"></div>
                    </div>
                </div>
            </div>
        </aside>
        <main
            class="flex-1 h-[calc(100vh-73px)] overflow-y-auto scrollbar-hide bg-background-dark ml-0 lg:ml-64 transition-[margin] duration-300">
            <div class="max-w-6xl mx-auto p-4 md:p-8 lg:p-12">
                <div class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-4">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-display font-bold text-white mb-2">Section 3: Services
                            &amp; Duties</h1>
                        <p class="text-sm md:text-base text-slate-400">Academic services and professional duties for the
                            current evaluation period.</p>
                    </div>
                    <div
                        class="text-xs text-slate-500 font-mono bg-white/5 px-4 py-2 rounded-lg border border-white/5 w-fit">
                        TERM: 1/2024 • LAST UPDATED: @DateTime.Now.ToString("dd MMM")
                    </div>
                </div>
                <div class="space-y-8 pb-12">

                    <!-- 3.1 Projects with Income -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">payments</span>
                                <h2 class="text-lg font-semibold tracking-wide">Academic Service Projects with Income</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Project Name</th>
                                        <th class="px-6 py-4 font-semibold">Service Applicant</th>
                                        <th class="px-6 py-4 font-semibold">Type of Work</th>
                                        <th class="px-6 py-4 font-semibold">Start Date</th>
                                        <th class="px-6 py-4 font-semibold">Fund</th>
                                        <th class="px-6 py-4 font-semibold">Note</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @foreach (var item in Model.ProjectsWithIncome)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.ProjectName</td>
                                            <td class="px-6 py-4 text-slate-400">@item.RecipientAgency</td>
                                            <td class="px-6 py-4">@item.ServiceType</td>
                                            <td class="px-6 py-4 text-sm font-mono">@item.StartDate</td>
                                            <td class="px-6 py-4 text-sm font-mono">@((item.UniversityAllocation ?? 0).ToString("N2"))</td>
                                            <td class="px-6 py-4 text-slate-400 text-sm">@item.Remarks</td>
                                        </tr>
                                    }
                                    @if (!Model.ProjectsWithIncome.Any())
                                    {
                                        <tr>
                                            <td colspan="6" class="px-6 py-4 text-center text-slate-500">No data available
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 3.2 Quality Assurance Projects -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">verified_user</span>
                                <h2 class="text-lg font-semibold tracking-wide">Quality Assurance Projects</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Activity Name</th>
                                        <th class="px-6 py-4 font-semibold">Department</th>
                                        <th class="px-6 py-4 font-semibold">Assessment Level</th>
                                        <th class="px-6 py-4 font-semibold">Dates</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.QualityAssuranceProjects)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.ProjectName</td>
                                            <td class="px-6 py-4 text-slate-400">@item.RecipientAgency</td>
                                            <td class="px-6 py-4">@item.Duty</td>
                                            <td class="px-6 py-4 font-mono">@item.StartDate</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 3.3 Speaker Projects -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">mic_external_on</span>
                                <h2 class="text-lg font-semibold tracking-wide">Speaker Activities</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Event Topic</th>
                                        <th class="px-6 py-4 font-semibold">Role</th>
                                        <th class="px-6 py-4 font-semibold">Scope</th>
                                        <th class="px-6 py-4 font-semibold">Date</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.SpeakerActivities)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.ActivityName</td>
                                            <td class="px-6 py-4 text-slate-400">@item.Role</td>
                                            <td class="px-6 py-4">@item.Type</td>
                                            <td class="px-6 py-4 font-mono">@item.StartDate</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 3.4 Expert Activities -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">psychology</span>
                                <h2 class="text-lg font-semibold tracking-wide">Expert Activities</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Role</th>
                                        <th class="px-6 py-4 font-semibold">Organization / Journal</th>
                                        <th class="px-6 py-4 font-semibold">Description</th>
                                        <th class="px-6 py-4 font-semibold">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.ExpertActivities)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.Type</td>
                                            <td class="px-6 py-4 text-slate-400">@item.Agency
                                                @(!string.IsNullOrEmpty(item.JournalName) ? " / " + item.JournalName : "")
                                            </td>
                                            <td class="px-6 py-4">@item.ArticleName</td>
                                            <td class="px-6 py-4 font-mono">Active</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 4. Arts and Culture -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">theater_comedy</span>
                                <h2 class="text-lg font-semibold tracking-wide">Arts and Culture Activities</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Activity</th>
                                        <th class="px-6 py-4 font-semibold">Location</th>
                                        <th class="px-6 py-4 font-semibold">Role</th>
                                        <th class="px-6 py-4 font-semibold">Date</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.ArtsAndCultureActivities)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.EventName</td>
                                            <td class="px-6 py-4 text-slate-400">Unknown</td> <!-- No location in VM -->
                                            <td class="px-6 py-4">Unknown</td> <!-- No role in VM -->
                                            <td class="px-6 py-4 font-mono">@item.StartDateTime?.ToString("MMM yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 5. Other Assigned Tasks -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">task</span>
                                <h2 class="text-lg font-semibold tracking-wide">Other Assigned Tasks</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Task Description</th>
                                        <th class="px-6 py-4 font-semibold">Assigned By</th>
                                        <th class="px-6 py-4 font-semibold">Status</th>
                                        <th class="px-6 py-4 font-semibold">Due Date</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.OtherTasks)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.TaskName</td>
                                            <td class="px-6 py-4 text-slate-400">@item.AssignedBy</td>
                                            <td class="px-6 py-4"><span
                                                    class="bg-emerald-500/20 text-emerald-300 px-2 py-1 rounded text-xs">Completed</span>
                                            </td>
                                            <td class="px-6 py-4 font-mono">@item.EndDateTime?.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 6. Administrative Work -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">admin_panel_settings</span>
                                <h2 class="text-lg font-semibold tracking-wide">Administrative Work</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Position</th>
                                        <th class="px-6 py-4 font-semibold">Unit / Committee</th>
                                        <th class="px-6 py-4 font-semibold">Term</th>
                                        <th class="px-6 py-4 font-semibold">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.AdminWork)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.TaskName</td>
                                            <td class="px-6 py-4 text-slate-400">--</td>
                                            <td class="px-6 py-4 font-mono">--</td>
                                            <td class="px-6 py-4">--</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- 7. Support Tasks -->
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div
                            class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-secondary">support_agent</span>
                                <h2 class="text-lg font-semibold tracking-wide">Support Tasks</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                <thead>
                                    <tr
                                        class="bg-white/5 text-[10px] uppercase tracking-widest text-slate-400 border-b border-white/10">
                                        <th class="px-6 py-4 font-semibold">Activity</th>
                                        <th class="px-6 py-4 font-semibold">Description</th>
                                        <th class="px-6 py-4 font-semibold">Hours</th>
                                        <th class="px-6 py-4 font-semibold">Date</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5 text-sm">
                                    @foreach (var item in Model.SupportTasks)
                                    {
                                        <tr class="hover:bg-white/5 transition-colors">
                                            <td class="px-6 py-4 font-medium">@item.TaskName</td>
                                            <td class="px-6 py-4 text-slate-400">--</td>
                                            <td class="px-6 py-4">--</td>
                                            <td class="px-6 py-4 font-mono">--</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- Development Activities (Placeholder) -->
                    <!-- Note: Development Activities not currently in ViewModel -->
                    <!--
                    <section class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-card-header px-6 py-4 flex items-center justify-between border-b border-white/10">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-primary">school</span>
                                <h2 class="text-lg font-semibold tracking-wide">Development Activities</h2>
                            </div>
                        </div>
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-left min-w-[600px]">
                                ...
                            </table>
                        </div>
                    </section>
                    -->

                    <!-- Summary -->
                    <section
                        class="bg-surface-dark/40 border border-white/10 rounded-2xl overflow-hidden shadow-2xl p-6 md:p-8 mt-12">
                        <form method="post" action="">
                            @Html.AntiForgeryToken()
                            <div class="flex flex-col gap-6">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="material-symbols-outlined text-white/70">comment</span>
                                    <h2 class="text-lg font-semibold tracking-wide">Summary</h2>
                                </div>
                                <div class="space-y-2">
                                    <label class="text-xs font-bold uppercase tracking-widest text-slate-400">Additional
                                        Comments / Notes</label>
                                    <textarea name="SummaryComments"
